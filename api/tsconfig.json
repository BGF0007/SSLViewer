{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "allowJs": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
